<!DOCTYPE html>
<html>
  <head>
    <title>New</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= Gon::Base.render_data %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>
  <body>




    <nav class="navbar navbar-dark bg-info navbar-expand-lg ">
      <ul class="navbar-nav mr-auto">
          <li class="nav-item">
          <%= link_to image_tag("zatsu_meshi.png"), root_path %>
          </li>
      </ul>
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item pull-right"><%= link_to '"' + current_user.name + '"でログイン中', edit_user_registration_path, class: "btn btn-danger  text-light"  %></li>
          <li class="nav-item pull-right"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-danger  text-light"  %></li>
        <% else %>
          <li class="nav-item pull-right">
            <%= link_to "登録",new_user_registration_path, class: "btn btn-danger text-light" %>
          </li>
          <li class="nav-item pull-right">
            <%= link_to "ログイン",new_user_session_path, class:"btn btn-danger text-light" %>
          </li>
         <% end %>
      </ul>
    </nav>
    <nav class="navbar navbar-dark bg-primary navbar-expand-md">
      <ul class="navbar-nav mr-auto">
      </ul>
      <ul class="navbar-nav">
        <% if user_signed_in? %>
        <li class="nav-item pull-right">
        <%= link_to "レシピ作成",new_post_path, class:"btn btn-danger text-light" %>
        </li>
        <li class="nav-item pull-right">
        <%= link_to "作成したレシピ", user_list_path(current_user.id) , class:"btn btn-danger text-light" %>
        </li>
        <li class="nav-item pull-right">
        <%= link_to "お気に入り", like_list_path(current_user.id) , class:"btn btn-danger text-light" %>
        </li>
        <% else %>
        <% end %>
      </ul>
    </nav>
    <div class="container-fluid">
    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert"><%= alert %></p>
    <% end %>


    <%= yield %>
    </div>
  </body>
</html>


